<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".toast.ToastActivity">

    <Button
        android:id="@+id/toast_short"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toast_short" />

    <Button
        android:id="@+id/toast_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toast_long" />

    <Button
        android:id="@+id/toast_custom_gravity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toast_custom_gravity" />

    <Button
        android:id="@+id/toast_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toast_custom" />
</LinearLayout>